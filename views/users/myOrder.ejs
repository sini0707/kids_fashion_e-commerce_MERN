    <script>
  
  function returnOrder(prdctId, orderId, status, qty) {
  $.ajax({
    url: '/returnOrder',
    method: 'put',
    data: {
      orderId: orderId,
      prdctId: prdctId,
      qty: qty,
      status: status
    },
    success: (response) => {      
        location.reload();
       
    },
    error: (xhr, textStatus, errorThrown) => {
      console.error('AJAX request failed:', textStatus, errorThrown);
    
    }
  });
}

      
