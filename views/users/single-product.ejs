    <script src="https://cdnjs.cloudflare.com/ajax/libs/elevatezoom/3.0.8/jquery.elevatezoom.min.js"></script>

    
    <script>
        // Wait for the document to be ready
        $(document).ready(function () {
          // Initialize ElevateZoom for the large image
          $("#zoomed-image").elevateZoom({
            zoomType: "inner",
            cursor: "crosshair",
            gallery: "gallery_01",
            galleryActiveClass: "active"
          });
      
          // Event handler to update the large image when a thumbnail is clicked
          $(".product__thumb__pic").on("click", function () {
            // Remove zoom from previous selected thumbnail
            $(".product__thumb__pic.active").elevateZoom({
              zoomEnabled: false
            });
      
            // Get the image URL from the clicked thumbnail
            var imageUrl = $(this).data("setbg");
      
            // Update the large image with the clicked thumbnail's URL
            $("#zoomed-image").attr("src", imageUrl);
            $("#zoomed-image").data("zoom-image", imageUrl);
      
            // Destroy the previous ElevateZoom instance for the large image
            $.removeData($("#zoomed-image"), "elevateZoom");
      
            // Reinitialize ElevateZoom for the large image with the updated image
            $("#zoomed-image").elevateZoom({
              zoomType: "inner",
              cursor: "crosshair",
              gallery: "gallery_01",
              galleryActiveClass: "active"
            });
          });
        });
      </script>
